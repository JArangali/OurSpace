    <link href="~/vendor/swiper/swiper-bundle.min.css" rel="stylesheet">
</head>

<body>
    <main id="main">
        <section id="hero">
            <form asp-action="Login" asp-controller="Account" method="post">
            <section>
                <div class="sign-up-container">
                    <div class="container">
                        <h1 style="font-family:Bahnschrift ; text-align:center">Log In</h1>

                        <!-- Email input -->
                        <div class="form-floating mb-4">
                            <input asp-for="Uemail" class="form-control" placeholder="" />
                            <label asp-for="Uemail">Email</label>
                            <span asp-validation-for="Uemail" class="text-danger"></span>
                        </div>

                        <!-- Password input -->
                        <div class="form-floating mb-4">
                            <input asp-for="UPassword" class="form-control" type = "password" placeholder="" />
                            <label asp-for="UPassword">Password</label>
                            <span asp-validation-for="UPassword" class="text-danger"></span>

                        </div>
                         @Html.ValidationMessage("LoginErrors", new { @class = "text-danger" })


                        <div class="text-center">
                            <p>Don't have an account yet? <a asp-area="" asp-controller="Account" asp-action="Register"> Sign Up</a>! </p>
                            <button type="submit" class="sign-up-button">Sign In</button>
                        </div>
                    </div>
                </div>
            </section
        </form>
</section><!-- End Stats Counter Section -->
   <br />
      <br />
         <br />
            <br />
               <br />
                  <br />
                      <br />


    </div>
